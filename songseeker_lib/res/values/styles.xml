<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SongSeekerTheme" parent="Theme.Sherlock.ForceOverflow"></style>

    <style name="DialogThemeNoTitle" parent="Theme.Sherlock.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="list_view_first_line">
        <item name="android:layout_height">@dimen/line_height_list_item</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="list_view_second_line">
        <item name="android:layout_height">@dimen/line_height_list_item</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="list_view_third_line">
        <item name="android:layout_height">@dimen/line_height_list_item</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="music_info_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="music_info_subtitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="music_info_details">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="seekbar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
    </style>

    <style name="pl_options_labels">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="edit_text_holo">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="button_holo">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@drawable/btn_default_holo_dark</item>
    </style>

    <style name="artist_bio">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="listview">
        <item name="android:divider">@drawable/divider_horizontal_holo_dark</item>
        <item name="android:listSelector">@drawable/list_selector_holo_dark</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollbarTrackVertical">@drawable/fastscroll_track_holo_dark</item>
        <item name="android:scrollbarThumbVertical">@drawable/fastscroll_thumb_holo</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

    <style name="scrollview">
        <item name="android:scrollbarTrackVertical">@drawable/fastscroll_track_holo_dark</item>
        <item name="android:scrollbarThumbVertical">@drawable/fastscroll_thumb_holo</item>
    </style>

    <style name="about_description">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="about_features">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="about_disclaimers">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
	<!-- Styles created by Android Action Bar Style Generator -->
    <style name="Theme.ss" parent="@style/Theme.Sherlock.ForceOverflow">
        <item name="actionBarItemBackground">@drawable/selectable_background_ss</item>
        <item name="popupMenuStyle">@style/ss_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/ss_DropDownListView</item>
        <item name="actionBarTabStyle">@style/ss_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/ss_DropDownNav</item>
        <item name="actionBarStyle">@style/ss_transparent_ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ss</item>
        <item name="android:popupMenuStyle">@style/ss_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ss_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/ss_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/ss_DropDownNav</item>
        <item name="android:actionBarStyle">@style/ss_transparent_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_ss</item>
    </style>

    <style name="ss_solid_ActionBar" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_ss</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_ss</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_ss</item>
        <item name="progressBarStyle">@style/ss_ProgressBar</item>
        <item name="android:background">@drawable/ab_solid_ss</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ss</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ss</item>
        <item name="android:progressBarStyle">@style/ss_ProgressBar</item>
    </style>

    <style name="ss_transparent_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_ss</item>
        <item name="progressBarStyle">@style/ss_ProgressBar</item>
        <item name="android:background">@drawable/ab_transparent_ss</item>
        <item name="android:progressBarStyle">@style/ss_ProgressBar</item>
    </style>

    <style name="ss_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ss</item>
    </style>

    <style name="ss_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ss</item>
    </style>

    <style name="ss_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_ss</item>
        <item name="android:background">@drawable/tab_indicator_ab_ss</item>
    </style>

    <style name="ss_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_ss</item>
        <item name="android:background">@drawable/spinner_background_ab_ss</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ss</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ss</item>
    </style>

    <style name="ss_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ss</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.ss.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/ss_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/ss_DropDownListView</item>
        <item name="android:popupMenuStyle">@style/ss_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ss_DropDownListView</item>
    </style>

</resources>