<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/first_run_welcome"
            style="@style/highlighted_bold_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_padding"
            android:text="@string/first_run_welcome" />

        <TextView
            android:id="@+id/first_run_usage"
            style="@style/bold_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_run_welcome"
            android:layout_margin="@dimen/layout_padding"
            android:text="@string/first_run_usage" />

        <Button
            android:id="@+id/btn_import_profile"
            style="@style/button_holo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_run_usage"
            android:layout_gravity="center"
            android:background="@drawable/btn_default_holo_dark"
            android:minWidth="100dip"
            android:text="@string/import_artists" />
    </RelativeLayout>

</ScrollView>