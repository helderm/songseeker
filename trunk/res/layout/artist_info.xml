<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artistinfo_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/artistinfo_image"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/blankdisc" >
        </ImageView>

        <TextView
            android:id="@+id/artistinfo_artistName"
            style="@style/music_info_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/artistinfo_image"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/artistinfo_image" >
        </TextView>

        <View
            android:id="@+id/horizontal_bar1"
            style="@style/horizontal_bars"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/artistinfo_artistName"
            android:layout_marginTop="5dip" >
        </View>

        <TextView
            android:id="@+id/artistinfo_biography"
            style="@style/music_info_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/horizontal_bar1"
            android:layout_marginTop="5dip"
            android:gravity="right"
            android:text="Biography >>" >
        </TextView>

        <View
            android:id="@+id/horizontal_bar2"
            style="@style/horizontal_bars"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/artistinfo_biography"
            android:layout_marginTop="5dip" >
        </View>

        <TextView
            android:id="@+id/artistinfo_news"
            style="@style/music_info_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/horizontal_bar2"
            android:layout_marginTop="5dip"
            android:gravity="right"
            android:text="News >>" >
        </TextView>

        <View
            android:id="@+id/horizontal_bar3"
            style="@style/horizontal_bars"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/artistinfo_news"
            android:layout_marginTop="5dip" >
        </View>

        <TextView
            android:id="@+id/artistinfo_similar"
            style="@style/music_info_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/artistinfo_artistName"
            android:layout_alignRight="@+id/artistinfo_artistName"
            android:layout_below="@+id/horizontal_bar3"
            android:layout_marginTop="5dip"
            android:gravity="right"
            android:text="Similar Artists >>" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/artistinfo_buy"
            style="@style/Button"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginTop="30dip"
            android:layout_toLeftOf="@+id/artistinfo_news"
            android:text="Buy" >
        </Button>

        <Button
            android:id="@+id/artistinfo_watch"
            style="@style/Button"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/artistinfo_buy"
            android:layout_toRightOf="@+id/artistinfo_buy"
            android:text="Watch" >
        </Button>

        <Button
            android:id="@+id/artistinfo_add"
            style="@style/Button"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/artistinfo_buy"
            android:layout_below="@+id/artistinfo_buy"
            android:text="+ Profile" >
        </Button>

        <Button
            android:id="@+id/artistinfo_share"
            style="@style/Button"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artistinfo_buy"
            android:layout_toRightOf="@+id/artistinfo_add"
            android:text="Share" >
        </Button>

        <TextView
            android:id="@+id/artistinfo_topTrackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artistinfo_add"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="20dip"
            android:gravity="center|top"
            android:text="Artist&apos;s Albums"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>
    </RelativeLayout>

</LinearLayout>