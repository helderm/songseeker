<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/releaseinfo_info" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">

	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView android:id="@+id/releaseinfo_coverArt" android:layout_width="120dip"
			android:layout_height="120dip" android:src="@drawable/blankdisc"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:layout_marginLeft="18dp"
			android:layout_marginTop="40dp"></ImageView>

		<TextView android:id="@+id/releaseinfo_releaseName" android:layout_height="wrap_content"
			android:layout_alignTop="@+id/releaseinfo_coverArt" android:layout_toRightOf="@+id/releaseinfo_coverArt"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

		<View android:id="@+id/horizontal_bar1" android:layout_width="fill_parent"
			android:layout_height="2dip" android:background="#FFFFFFFF"
			android:layout_below="@+id/releaseinfo_releaseName"
			android:layout_alignRight="@+id/releaseinfo_releaseName" android:layout_alignLeft="@+id/releaseinfo_releaseName"
			android:layout_marginTop="5dip"></View>

		<TextView android:id="@+id/by" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="by" 
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_below="@+id/horizontal_bar1" 
			android:layout_alignLeft="@+id/releaseinfo_releaseName"
			android:layout_marginTop="5dip"></TextView>

		<TextView android:id="@+id/releaseinfo_artistName" android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_marginLeft="5dip" android:layout_marginTop="5dip"
			android:layout_alignRight="@+id/releaseinfo_releaseName"
			android:textStyle="bold" android:layout_below="@+id/horizontal_bar1"
			android:layout_toRightOf="@+id/by" android:gravity="center"></TextView>

		<!-- <View android:id="@+id/horizontal_bar2" android:layout_width="fill_parent"
			android:layout_height="2dip" android:background="#FFFFFFFF"
			android:layout_below="@+id/by"
			android:layout_alignRight="@+id/releaseinfo_releaseName" android:layout_alignLeft="@+id/releaseinfo_releaseName"
			android:layout_marginTop="5dip"></View>-->

	</RelativeLayout>

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button android:layout_height="40dip" android:layout_width="110dip"
			android:id="@+id/releaseinfo_buy" android:text="Buy"
			android:layout_marginTop="30dip" android:layout_marginLeft="60dip"></Button>

		<Button android:layout_height="40dip" android:layout_width="110dip"
			android:id="@+id/releaseinfo_share" android:text="Share"
			android:layout_toRightOf="@+id/releaseinfo_buy"
			android:layout_alignTop="@+id/releaseinfo_buy"></Button>

		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="Song List"
			android:id="@+id/releaseinfo_topTrackTitle" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="20dip" android:layout_marginBottom="15dip" 
			android:gravity="center|top"
			android:layout_below="@+id/releaseinfo_buy"></TextView>

	</RelativeLayout>
</LinearLayout>
