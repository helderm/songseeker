<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/about_description"
            style="@style/about_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:text="Song Seeker is a new way of discovering music that matches your taste! Find millions of songs with a single click, listen to 30/60s samples, and much more! You can also configure your playlist with several options, export it to other services like YouTube and Rdio, and even buy songs that you like! Some of the features are:" />

        <TextView
            android:id="@+id/about_feature_playlist"
            style="@style/about_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_description"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:text="* Create a personalized playlist: With a single click of the main logo, you will receive songs that matches your taste!" />

        <TextView
            android:id="@+id/about_feature_profile"
            style="@style/about_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_feature_playlist"
            android:layout_marginTop="10dip"
            android:text="* Build a taste profile: Add artists to your taste profile (Main screen -> Menu -> Profile) or import them from Last.fm or from your device top artists (Main screen -> Menu -> Settings)!" >
        </TextView>

        <TextView
            android:id="@+id/about_feature_export"
            style="@style/about_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_feature_profile"
            android:layout_marginTop="10dip"
            android:text="* Export your playlist: Export the playlist created to other services like YouTube and Grooveshark! (Playlist screen -> Menu -> Export as...)" >
        </TextView>

        <TextView
            android:id="@+id/about_feature_configure"
            style="@style/about_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_feature_export"
            android:layout_marginTop="10dip"
            android:text="* Configure your playlist: We provide several options to personalize your playlist, like Mood, Tempo and Danceability! You can also filter to songs from only artists that you know or similar ones! (Main screen -> Menu - > Playlist Options)" >
        </TextView>

        <TextView
            android:id="@+id/about_feature_more"
            style="@style/about_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_feature_configure"
            android:layout_marginTop="10dip"
            android:text="* And much more! Get information from an artist, songs in an album, watch songs on YouTube, buy them at 7digital..." >
        </TextView>

        <LinearLayout
            android:id="@+id/about_echonest_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_feature_more"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/echonest_logo"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:layout_alignLeft="@+id/about_description"
                android:layout_marginTop="10dip"
                android:src="@drawable/echonest_logo" />

            <TextView
                android:id="@+id/echonest_disclaimer"
                style="@style/about_disclaimers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:text="Music recommendation, artist news, biography provided by The Echo Nest." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_sevendigital_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_echonest_info"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sevendigital_logo"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:layout_alignLeft="@+id/about_description"
                android:layout_marginTop="10dip"
                android:src="@drawable/sevendigital_logo" />

            <TextView
                android:id="@+id/sevendigital_disclaimer"
                style="@style/about_disclaimers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:text="Song, album, artist information, song samples and buy links provided by 7digital." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_designer_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_sevendigital_info"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/designer_logo"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:layout_alignLeft="@+id/about_description"
                android:layout_marginTop="10dip"
                android:src="@drawable/designer_logo" />

            <TextView
                android:id="@+id/designer_disclaimer"
                style="@style/about_disclaimers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:text="Launcher and Tab icons by Lucas Sanchez." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_androidicons_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_designer_info"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/androidicons_logo"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:layout_alignLeft="@+id/about_description"
                android:layout_below="@+id/designer_logo"
                android:layout_marginTop="10dip"
                android:src="@drawable/androidicons_logo" />

            <TextView
                android:id="@+id/androidicons_disclaimer"
                style="@style/about_disclaimers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:text="Some Menu icons by Android Icons." />
        </LinearLayout>

        <TextView
            style="@style/about_disclaimers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/about_description"
            android:layout_below="@+id/about_androidicons_info"
            android:layout_marginTop="15dip"
            android:text="This product uses The Echo Nest API, 7digital API, Last.fm API, Grooveshark API and YouTube API, but it is not endorsed, certified, approved in any way by the mentioned services." />
    </RelativeLayout>

</ScrollView>