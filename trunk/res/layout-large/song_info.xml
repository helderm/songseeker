<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/songinfo_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/songinfo_coverArt"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp" >
        </ImageView>

        <TextView
            android:id="@+id/songinfo_songName"
            style="@style/music_info_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/songinfo_coverArt"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/songinfo_coverArt" >
        </TextView>

        <TextView
            android:id="@+id/songinfo_songVersion"
            style="@style/music_info_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/songinfo_songName"
            android:layout_alignRight="@+id/songinfo_songName"
            android:layout_below="@+id/songinfo_songName"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip" >
        </TextView>

        <View
            android:id="@+id/horizontal_bar1"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignLeft="@+id/songinfo_songName"
            android:layout_alignRight="@+id/songinfo_songName"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/songinfo_songVersion"
            android:layout_marginTop="5dip"
            style="@style/horizontal_bars" >
        </View>

        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/songinfo_songName"
            android:layout_below="@+id/horizontal_bar1"
            android:layout_marginTop="5dip"
            android:text="by"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <TextView
            android:id="@+id/songinfo_artistName"
            style="@style/music_info_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/songinfo_songName"
            android:layout_below="@+id/horizontal_bar1"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/by" >
        </TextView>

        <View
            android:id="@+id/horizontal_bar2"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignLeft="@+id/songinfo_songName"
            android:layout_alignRight="@+id/songinfo_songName"
            android:layout_below="@+id/songinfo_artistName"
            android:layout_marginTop="5dip"
            style="@style/horizontal_bars" >
        </View>

        <TextView
            android:id="@+id/on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/songinfo_songName"
            android:layout_below="@+id/horizontal_bar2"
            android:layout_marginTop="5dip"
            android:text="on"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <TextView
            android:id="@+id/songinfo_albumName"
            style="@style/music_info_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/songinfo_songName"
            android:layout_below="@+id/horizontal_bar2"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/on" >
        </TextView>

        <ImageView
            android:id="@+id/songinfo_playpause"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@+id/songinfo_coverArt"
            android:layout_below="@+id/songinfo_coverArt"
            android:layout_marginLeft="42dp"
            android:src="@drawable/ic_image_play" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/songinfo_buy"
            style="@style/Button"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:layout_marginTop="15dip"
            android:layout_toLeftOf="@+id/songinfo_albumName"
            android:text="Buy" >
        </Button>

        <Button
            android:id="@+id/songinfo_watch"
            style="@style/Button"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/songinfo_buy"
            android:layout_toRightOf="@+id/songinfo_buy"
            android:text="Watch" >
        </Button>

        <Button
            android:id="@+id/songinfo_add"
            style="@style/Button"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/songinfo_buy"
            android:layout_below="@+id/songinfo_buy"
            android:layout_toLeftOf="@+id/songinfo_albumName"
            android:text="+ Playlist" >
        </Button>

        <Button
            android:id="@+id/songinfo_share"
            style="@style/Button"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songinfo_buy"
            android:layout_toRightOf="@+id/songinfo_add"
            android:text="Share" >
        </Button>

        <TextView
            android:id="@+id/songinfo_topTrackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songinfo_add"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="20dip"
            android:gravity="center|top"
            android:text="Artist&apos;s Top Songs"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>
    </RelativeLayout>

</LinearLayout>