<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SongSeekerTheme" parent="Theme.Sherlock.ForceOverflow"></style>

    <style name="DialogThemeNoTitle" parent="Theme.Sherlock.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="list_view_first_line">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="list_view_second_line">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="list_view_third_line">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="music_info_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="music_info_subtitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>  
    
    <style name="music_info_details">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>    
    
    <style name="seekbar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
    </style>

    <style name="pl_options_labels">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="edit_text_holo">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    
    <style name="button_holo">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@drawable/btn_default_holo_dark</item>
    </style>

</resources>